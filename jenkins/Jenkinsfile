pipeline {
	agent none
    stages {

        stage('Build') {
			agent {
	        	docker {
	        	    image 'maven:3-alpine'
	        	    args '-u root'
		    	    }
		    }
            steps {
                sh 'mvn -B -DskipTests clean package'
				stash includes: 'Pipeline/target/my-app-1.0-SNAPSHOT.jar', name: 'ARTEFACT'
                sh 'mvn test'
            }
		}
		stage('Build image') {
			agent{ label 'master'}
			steps {	
				unstash 'ARTEFACT'	
				sh "docker ps"
			}	
	  	}
  }
}
